<h1 align="center">USER DETAILS</h1>
<h3 align="center"><%=will_paginate @articles %></h3>

<br>
<br>
<h2 align="center"><%=@user.username %>'s profile</h2>
<%#=gravatar_for(@user,200) %>
<img src="<%=gravatar_for(@user,200) %>" alt="">
<br>
<br>
<h3 align="center">Articles by <%=@user.username %></h3>
<br>
<br>
<br>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
    <%@articles.each do |article| %>
      <tr>
        <td><%=article.title %></td>
        <td align="center"><%=article.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br><br>
<table>
  <tr>
    <%=link_to 'EDIT', edit_user_path(@user) %>
  </tr>
</table>
<p><%= button_to "BACK", users_path, method: :get %></p>
<h3 align="center"><%=will_paginate @articles %></h3>

<%=form_with(model: @user, local: true) do |f|%>

  <p align="center">
    <%=f.label :username %><br>
    <%=f.text_field :username, placeholder: "Choose a  user name" %>
  </p>
  <p align="center">
    <%=f.label :email %><br>
    <%=f.email_field :email, placeholder: "Choose an email" %>
  </p>
  <p align="center">
    <%=f.label :password %><br>
    <%=f.password_field :password, placeholder: "Choose a password" %>
  </p>
  <p align="center">
    <%# debugger %>
    <%=f.submit(@user.new_record? ? "SIGN UP" :"UPDATE ACCOUNT")%>
  </p>
<%end%>

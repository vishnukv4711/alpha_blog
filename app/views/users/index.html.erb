<h1 align="center">ALPHA BLOG USERS</h1>
<br>
<br>
<br>
<br>
<table align="center">
  <% @users.each do |user| %>
    <tr>
      <th align="center", colspan="3"><%= user.username %></th>
    </tr>
    <td><%= pluralize(user.articles.count, "article")%></td>
    <td><%=link_to 'view profile', user_path(user) %></td>
    <td><%=link_to 'edit profile', edit_user_path(user) %></td>
<% end %>
</table>
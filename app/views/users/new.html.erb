<h1>CREATE NEW USER</h1>

<%if @user.errors.any? %>
  <h2>The following prevented the user from getting saved!!</h2>
  <ul>
    <%=@user.errors.full_messages.each do |error| %>
      <li><%=error %></li>
    <%end %>
  </ul>

<%end %>


<%=form_with(model:@user, local: true) do |f|%>
  <p>
    <%=f.label :username %><br>
    <%=f.text_field :username %>
  </p>
  <p>
    <%=f.label :email %><br>
    <%=f.text_field :email %>
  </p>
  <p>
    <%=f.label :password %><br>
    <%=f.text_field :password %>
  </p>
  <p>
    <%=f.label :"re-enter password" %><br>
    <%=f.text_field :password %>
  </p>
  <table>
      <td><%=button_to 'CANCEL', users_path ,method: :get%></td>
      <td><%=f.submit "CREATE USER"%></td>
  </table>
<%end %>
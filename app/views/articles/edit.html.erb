<h1>Edit article</h1>
<%#debugger %>
<% if @article.errors.any? %>
  <div>
    <h2>The following errors prevented the articles from saving the article</h2>
    <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>




<%= form_with(model: @article, local: true) do |f| %>
  <p>
    <%= f.label :title %> <br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :description %> <br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%=f.submit %>
  </p>
<%end %>
<table>
  <tr>
    <td><%=button_to "HOME", articles_path, method: :get%></td>
    <td><%=button_to "BACK", article_path(@article.id), method: :get%></td>
  </tr>
</table>
<%= form_with(model: @article, local: true) do |f| %>
  <p>
    <%= f.label :title %> <br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %> <br>
    <%= f.text_area :description %>
  <p><%=@article.user.username if @article.user%></p>
  </p>
  <p>
    <%=f.submit %>
  </p>
<%end %>